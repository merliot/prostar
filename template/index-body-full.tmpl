<style>
	table {
		width: 100%;
		border-collapse: collapse;
	}
	th, td {
		padding: 8px;
		text-align: left;
		border-bottom: 1px solid #ddd;
	}
	th {
		text-align: center;
	}
	tr:nth-child(even) {
		background-color: #f2f2f2;
	}
	td:nth-child(2) {
		text-align: right;
	}
	.icon {
		width: 60px;
		height: 60px;
		margin-right: 15px;
		padding: 0px;
		cursor: default;
	}
	.panel {
		align-items: center;
	}
</style>

<div class="divFlexRow panel">
	<img class="icon" src="images/charge-icon.png"></img>
	<table>
		<tr>
			<th colspan="2">Charge Summary</th>
		</tr>
		<tr>
			<td>Array Voltage</td>
			<td><span id="array-voltage"></span> V</td>
		</tr>
		<tr>
			<td>ProStar Charge Power</td>
			<td><span id="charge-power"></span> W</td>
		</tr>
		<tr>
			<td>Daily System Charge</td>
			<td><span id="daily-system-charge"></span> Ah</td>
		</tr>
		<tr>
			<td>Charge State</td>
			<td><span id="charge-state"></span></td>
		</tr>
	</table>
</div>

<div class="divFlexRow panel">
	<img class="icon" src="images/battery-icon.png"></img>
	<table>
		<tr>
			<th colspan="2">Battery Summary</th>
		</tr>
		<tr>
			<td>Net Battery Current</td>
			<td><span id="net-battery-current"></span> A</td>
		</tr>
		<tr>
			<td>Battery Terminal Voltage</td>
			<td><span id="battery-terminal-voltage"></span> V</td>
		</tr>
	</table>
</div>

<div class="divFlexRow panel">
	<img class="icon" src="images/load-icon.png"></img>
	<table>
		<tr>
			<th colspan="2">Load Summary</th>
		</tr>
		<tr>
			<td>Load Voltage</td>
			<td><span id="load-voltage"></span> V</td>
		</tr>
		<tr>
			<td>Load Current</td>
			<td><span id="load-current"></span> A</td>
		</tr>
		<tr>
			<td>Daily Load</td>
			<td><span id="daily-load"></span> Ah</td>
		</tr>
		<tr>
			<td>Load State</td>
			<td><span id="load-state"></span></td>
		</tr>
	</table>
</div>
